{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "__tests__"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.js"
  ]
}